<view class="container">
  <swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
    <block wx:for="{{imgUrls}}">
      <swiper-item>
        <image src="{{item}}" class="slide-image" width="100%" height="100%" />
      </swiper-item>
    </block>
  </swiper>
  <view class='menuTab'>
    <ul>
      <li>本季游</li>
      <li>主题游</li>
    </ul>
    <div class='gray'></div>
  </view>

  <view class='city'>
    <p class='hot-city'>——  热门城市  ——</p>
    <div class='gray-1'></div>
    <div class='tj'>
      <image src='../imgs/tj.jpg' class='cityy'></image>
      <p class='tj-p'>天津</p>
    </div>
    <div class='bj'>
      <image src='../imgs/bj.jpg' class='cityy'></image>
      <p class='bj-p'>北京</p>
    </div>
    <div class='cd'>
      <image src='../imgs/cd.jpg' class='cityy'></image>
      <p class='cd-p'>成都</p>
    </div>
    <div class='sh'>
      <image src='../imgs/sh.jpg' class='cityy'></image>
      <p class='sh-p'>上海</p>
    </div>
  </view>
  
  <div class='bot'>
    <div class='gray-2'></div>
    <p class='port'>——  推荐景点  ——</p>
    <div class='gray-3'></div>
    <div class='po1'>
      <image src='../imgs/port1.jpg' class='port-'></image>
      <p class='po1-p'>埃及游轮</p>
    </div>
    <div class='po2'>
      <image src='../imgs/port2.jpg' class='port-'></image>
      <p class='po2-p'>西班牙</p>
    </div>
    <div class='po3'>
      <image src='../imgs/port3.jpg' class='port-'></image>
      <p class='po3-p'>泼水版纳</p>
    </div>
    
  </div>

  


</view>
